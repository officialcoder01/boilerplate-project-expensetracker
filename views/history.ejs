<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EXPENSE TRACKER</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/history.css" type="text/css">
  </head>
  <body>
    <div class="container">
        <img src="https://i.pinimg.com/736x/52/35/6c/52356cf30d16a9e2779679ce0ed593e4.jpg" alt="logo img" width="40px" />
        <h1>Expense History</h1>
        <table id="expense-history">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Expense Name</th>
                    <th>Amount</th>
                    <th>Category</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody id="expense-log">
                <% if (Array.isArray(expenses) && expenses.length) { %>
                    <% expenses.forEach(function(exp) { %>
                        <tr>
                            <td><%= exp.formattedDate || (exp.date ? new Date(exp.date).toLocaleDateString() : '') %></td>
                            <td><%= exp.title %></td>
                            <td><%= exp.amount != null ? Number(exp.amount).toFixed(2) : '' %></td>
                            <td><%= exp.category %></td>
                            <td><%= exp.description || '' %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr><td colspan="5">No expenses yet</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
  </body>
</html>